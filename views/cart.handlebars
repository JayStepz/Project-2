<div class="cart">
  <h2>Your Shopping Cart</h2>
  {{#if items.length}}
    <ul class="cart-items">
      {{#each items}}
        <li class="cart-item">
          <div class="item-info">
            <h3>{{name}}</h3>
            <p>{{description}}</p>
            <p>Price: {{price}}</p>
          </div>
          <div class="item-actions">
            <button class="remove-item" data-id="{{id}}">Remove</button>
            <input type="number" class="quantity" value="{{quantity}}" min="1" max="{{maxQuantity}}">
          </div>
        </li>
      {{/each}}
    </ul>
    <p class="cart-total">Total: {{totalPrice}}</p>
    <button class="checkout-button">Checkout</button>
  {{else}}
    <p>Your cart is empty.</p>
  {{/if}}
</div>
